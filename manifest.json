{
  "manifest_version": 3,
  "name": "TurboSpeed & Ad Skipper: Video Speed Controller",
  "version": "1.0.1",
  "description": "Control the speed of YouTube ads and videos with a slider (0.5x - 16x)",
  "permissions": [],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}